doctype html

html(lang="en-US")

    title Patreon | #{title}
    include _head.pug

    body.bg-darker.text-white.text-center.container

        div#content
            br
            br
            img#avatar.rounded-circle(src="assets/images/avatar.png",style="height: 100px; width: 100px;")
            h1#name.text-primary #{title} Offcial Patreon
            span The official Patreon page to thank the Amazing supporters!

            br
            br

            a.btn.bg-dark.text-white(href="https://www.patreon.com/hazardworks",style="width: 300px; border-left: 4px solid #F96854")
                i(class="fab fa-patreon")
                span  Support Me On Patreon!

            br 
            br

            h4#nuclear(style="color: #8dff03") Nuclear Hazard Supporters!
            if supportersNuclear.length
                span #{supportersNuclear.join(', ')}
            else
                span There are no supporters at this tier!
            
            h4#true(style="color: #f1c40f") True Hazard Supporters!
            if supportersTrue.length
                span #{supportersTrue.join(', ')}
            else
                span There are no supporters at this tier!
        
            h4#small(style="color: #4c7e00") Small Hazard Supporters!
            if supportersSmall.length
                span #{supportersSmall.join(', ')}
            else
                span There are no supporters at this tier!

            br
            br

            small.text-muted &copy; #{title} #{new Date().getFullYear()}
        
        script(src=cdnJQuery)
        script(src=cdnBootstrapJs)
        script(src=cdnFontAwesome)